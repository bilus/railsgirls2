<h2 class="bright"><%= @idea.name %></h2>

<%= image_tag(@idea.picture_url, :width => "50%", class: "centered") if @idea.picture.present? && @idea.picture_position == "top" %>

<p><%= @idea.description %></p>

<%= image_tag(@idea.picture_url, :width => "50%", class: "centered") if @idea.picture.present? && @idea.picture_position == "bottom" %>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>

