<%= link_to ideas_path, class: "no-underline" do %><h1>My blog</h1><% end %>

<%= link_to 'New Idea', new_idea_path, class: "btn btn-default" %>

<% @ideas.each do |idea| %>
  <div class="row">
    <div class="col-md-2">
      <%= image_tag(idea.picture_url, width: "100%", class: "thumb") if idea.picture.present? %>
    </div>
    <div class="col-md-10"
      <h2>
        <%= link_to idea, class: "no-underline" do %>
          <%= idea.name %>
        <% end %>
      </h2>

      <p class="grey"><%= idea.description.truncate(250) %> <%= link_to 'more...', idea, class: "more" %></p>
      <p><%= link_to 'Edit', edit_idea_path(idea) %> <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
<% end %>


